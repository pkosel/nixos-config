#! /usr/bin/env nix-shell
#! nix-shell -i bash -p bash parted

# partitioning
parted /dev/nvme0n1 -- mklabel gpt

parted /dev/nvme0n1 -- mkpart boot fat32 1MiB 512MiB
parted /dev/nvme0n1 -- set 1 esp on

parted /dev/nvme0n1 -- mkpart nixos ext4 512MiB -4GiB
parted /dev/nvme0n1 -- mkpart swap linux-swap -4GiB 100%

# create file systems
mkfs.fat -F 32 -n boot /dev/nvme0n1p1
mkfs.ext4 -L nixos /dev/nvme0n1p2
mkswap -L swap /dev/nvme0n1p3

# mount partitions
mount /dev/disk/by-label/nixos /mnt

mkdir -p /mnt/boot
mount /dev/disk/by-label/boot /mnt/boot

# mount data partitions
mkdir -p /mnt/data1
mount /dev/disk/by-label/data1 /mnt/data1
mkdir -p /mnt/data2
mount /dev/disk/by-label/data2 /mnt/data2
mkdir -p /mnt/data3
mount /dev/disk/by-label/data3 /mnt/data3
mkdir -p /mnt/data4
mount /dev/disk/by-label/data4 /mnt/data4

# activate swap
swapon /dev/nvme0n1p3

# generate default configuration
nixos-generate-config --root /mnt
